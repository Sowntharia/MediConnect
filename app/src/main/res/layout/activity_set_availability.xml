<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.SetAvailabilityActivity"
    android:background="@drawable/background_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Pick Up the Date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnPickDates"
            android:text="Pick Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"/>

        <TextView
            android:id="@+id/txtSelectedDate"
            android:text="No date selected"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDateCount"
            android:text="Dates selected: 0"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/listViewDates"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:divider="#CCC"
            android:dividerHeight="1dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputTimeSlot"
            android:hint="Enter time slot (e.g. 10:30)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnAddTimeSlot"
            android:text="Add Time Slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="70dp"/>

        <ListView
            android:id="@+id/listViewTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:divider="#CCCCCC"
            android:dividerHeight="1dp"/>

        <Button
            android:id="@+id/btnSaveAvailability"
            android:text="Save Availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"/>
    </LinearLayout>

</ScrollView>
